<style type="text/css">

.navbar-xs {
    min-height: 30px;
    height: 30px;
}
.navbar-xs .navbar-brand {
    padding: 0px 6px;
    font-size: 10px;
    line-height: 24px;
}

.navbar-xs .navbar-nav > li > a {
    padding-top: 2px;
    padding-bottom: 2px;
    line-height: 24px;
    vertical-align: top;
            
}

.toolbar ul {
    display: table-row;
    list-style-type: none;
    margin: 0;
    padding: 0;
    overflow: hidden;
}

    .toolbar ul li {
        display: table-cell;
        height: 24px;
        list-style-type: none;
        float: left;
        margin: 2px;
    }

        .toolbar ul li a {
            display: table-cell;
            vertical-align: top;
            height: 24px;
        }

        .toolbar ul li.button a {
            height: 24px;
        }
</style>

